.replies-list
  - list.each_with_index do |reply, index|
    .item
      .icon
        = link_to_user_avatar(reply.author)
      .meta
        = link_to_user reply.author
        %span.date= "回复于 #{readability_time_format reply.created_at}"
        = "(#{reply.up})"
        =link_to '支持', agree_topic_reply_path(reply.topic, reply), {:class => 'up'}
        =link_to '@回复', 'javascript:void(0)', {:class => 'reply'}
        =link_to "##{reply.floor}", "#{topic_path(reply.topic)}#reply#{reply.floor}", {:name => "reply#{reply.floor}", :class => 'floor'}
      .actions
      .content= rich_content(reply.content)
