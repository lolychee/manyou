- content_for :title do
  = t('.edit_topic')

- add_breadcrumb t('.edit_topic'), edit_topic_path(@topic)

.widget
  %h1.widget-title= t '.edit_topic'
  .widget-container.topic-form
    = form_for @topic do |form|
      = render :partial => "form", :object => form
      .field= form.submit t('submit.update'), :class => 'button submit'

